<section id="torch-toolbar">
  <div class="torch-container">
    <%= link  to: device_path(@conn, :index), class: "btn-xs" do %>
    <i class="pe-7s-back">back</i>
    <%=end%>
  </div>
</section>

<section id="torch-header-and-content">
  <div class="torch-container">
    <div class="header">
      <h3>New Device</h3>
    </div>
    <%= render "form.html", Map.put(assigns, :action, device_path(@conn, :create)) %>
  </div>
</section>
